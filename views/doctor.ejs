					  <li class="breadcrumb-item"><a href="#">Home</a></li>
					  <li class="breadcrumb-item active" aria-current="page">Doctors</li>
					</ol>
				  </nav>
                <h1>Welcome Admin !</h1>
                <div>
                    <h4 class="current-date"></h4>
                    <h5 class="current-time"></h5>
                </div>
			</div>
            <div class="container mt-5">
                <div style="text-align: center;">
                    <h2>Doctor Information</h2>
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#doctorModal">
                        <i class="fa-solid fa-plus" style="color: #f1f4f9;"></i> Add Doctor
                    </button>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="doctorModal" tabindex="-1" aria-labelledby="doctorModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="doctorModalLabel">Add Doctor</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/doctor" method="POST">
                                    <!-- Name -->
                                    <div class="form-group">
                                        <label for="name">Name:</label>
                                        <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                                    </div>

                                    <!-- Specialization -->
                                    <div class="form-group">
                                        <label for="specialization">Specialization:</label>
                                        <input type="text" class="form-control" id="specialization" name="specialization" placeholder="Enter your specialization" required>
                                    </div>

                                    <!-- Contact Information -->
                                    <div class="form-group">
                                        <label for="contact">Contact:</label>
                                        <input type="text" class="form-control" id="contact" name="contact" placeholder="Enter your contact information" required>
                                    </div>

                                    <!-- Appointment Information -->
                                    <div class="form-group">
                                        <label for="appointment">Appointment Type</label>
                                        <textarea class="form-control" id="appointment" name="appointment" placeholder="Enter appointment details" required></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

			<div class="card-body ">
				<table class="table table-hover table-in-card">
					<thead>
						<tr>
							<th scope="col">Doctor ID</th>
							<th scope="col">Name</th>
							<th scope="col">Specialization</th>
							<th scope="col">Contact</th>
							<th scope="col">Appointment Type</th>
							<th scope="col">Actions</th>
						</tr>
					</thead>
					<tbody>
						<% data.forEach((doctor) => { %>
                            <tr>
                              <th scope="row"><%= doctor.id %></th>
                              <td><%= doctor.name %></td>
                              <td><%= doctor.specialization %></td>
                              <td><%= doctor.contact %></td>
                              <td><%= doctor.appointment %></td>
                              <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                  <form action="/doctor/edit/<%= doctor.id %>" method="GET">
                                    <button type="submit" class="btn btn-primary">Edit</button>
                                  </form>
                                  <form action="/doctor/delete/<%= doctor.id %>" method="GET">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                  </form>
                                </div>
                              </td>
                            </tr>
                          <% }); %>

					</tbody>
				</table>
			</div>
		</div>
	</div>
